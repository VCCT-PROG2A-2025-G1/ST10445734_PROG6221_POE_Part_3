<Window x:Class="ST10445734_PROG6221_POE_Part_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10445734_PROG6221_POE_Part_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ASCII ART Display -->
        <ScrollViewer Grid.Row="0" Height="150" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBlock  x:Name="ChatDisplay2" 
                   FontFamily="Consolas"
                   FontSize="12"
                   TextWrapping="Wrap"     
                   Margin="0,0,0,10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"/>
        </ScrollViewer>

        <!-- User Entry Panel -->
        <StackPanel x:Name="UserPanel" Grid.Row="1" Margin="10">
            <TextBlock Text="Welcome! Please enter your name:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox x:Name="UserNameBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Start Chatbot" Click="StartChatbot_Click" Width="100"/>
        </StackPanel>

        <!-- Chat Panel (Initially Hidden) -->
        <StackPanel x:Name="ChatPanel" Visibility="Collapsed" VerticalAlignment="Bottom">
            <TextBlock x:Name="ChatOutput" Height="200" TextWrapping="Wrap" Margin="0,10"/>
            <TextBox x:Name="UserInput" Height="30" Margin="0,0,0,10"/>
            <Button Content="Send" Click="SendMessage_Click"/>
            <StackPanel>
                <Button Content="Open Task Manager" Click="OpenTaskWindow_Click" Width="200" Margin="10"/>
                <Button Content="Quiz Time!" Click="OpenQuizWindow_Click" Width="200" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
