<Window x:Class="ST10445734_PROG6221_POE_Part_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10445734_PROG6221_POE_Part_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ASCII ART Display -->
        <ScrollViewer Grid.Row="0" Height="150" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,10"
                      Background="#e0f2fe"
                      BorderBrush="#38bdf8"
                      BorderThickness="1"
                      Padding="10">
            <TextBlock  x:Name="ChatDisplay2" 
                   FontFamily="Consolas"
                   FontSize="14"
                   Foreground="#1e3a8a"
                   TextWrapping="Wrap"     
                   Margin="0,0,0,10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"/>
        </ScrollViewer>

        <!-- User Entry Panel -->
        <StackPanel x:Name="UserPanel" Grid.Row="1" Margin="0,20,0,0" VerticalAlignment="Bottom">
            <TextBlock Text="Welcome! Please enter your name:" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Foreground="#1e293b" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="UserNameBox" 
                     Width="250" 
                     Height="30" 
                     FontSize="14" 
                     Padding="5" 
                     Background="White" 
                     BorderBrush="#cbd5e1"
                     BorderThickness="1"
                     Margin="0,0,0,10"/>
            <Button Content="Start Chatbot"
                    Width="100"
                    Height="35"
                    Background="#2563eb"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="StartChatbot_Click" />
        </StackPanel>

        <!-- Chat Panel (Initially Hidden) -->
        <StackPanel x:Name="ChatPanel" Visibility="Collapsed" VerticalAlignment="Bottom">
            <TextBox x:Name="ChatOutput" 
                     Height="300" 
                     IsReadOnly="True"  
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Background="White"
                     BorderBrush="#cbd5e1"
                     BorderThickness="1"
                     FontSize="14"
                     Margin="0,0,0,10"/>
            <DockPanel>
                <TextBox x:Name="UserInput" 
                         Height="35" 
                         FontSize="14"
                         Margin="0,0,10,0"
                         Padding="8"
                         Background="White"
                         BorderBrush="#94a3b8"
                         BorderThickness="1"
                         Width="600"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"/>
                <Button Content="Send"
                        Height="35"
                        Width="100"
                        Background="#2563eb"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="SendMessage_Click"/>
            </DockPanel>
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Button Content="Open Task Manager" 
                        Click="OpenTaskWindow_Click" 
                        Width="180" 
                        Height="40"
                        Background="#3b82f6"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10"/>
                <Button Content="Quiz Time!" 
                        Click="OpenQuizWindow_Click" 
                        Width="150" 
                        Height="40"
                        Background="#10b981"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
